extends layout

block content
    h1 Register
    p Welcome to the #{title} Page
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
        //- if errors
        //-     li.alert.alert-danger #{errors[0].msg}
    form(method='post', action='/users/register', enctype='multipart/form-data', content-type='application/json')
        .form-group
            label Name
            input.form-control(name='name', type='text', placeholder='Bill')
        .form-group
            label Email
            input.form-control(name='email', type='email', placeholder='bill@example.com')
        .form-group
            label Username
            input.form-control(name='username', type='text', placeholder='Bill1524')
        .form-group
            label Password
            input.form-control(name='password', type='password', placeholder='Enter a Password')
        .form-group
            label Confirm Password
            input.form-control(name='password2', type='password', placeholder='Confirm Password')
        .form-group
            label Profile Picture
            input.form-control(name='profilePicture', type='file')
        input.btn.btn-default.btn-primary(name='submit', type='submit', value='Register')
